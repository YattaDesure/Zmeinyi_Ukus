import random
#1

# Генерация случайного числа
number = random.randint(1, 1000)
is_prime = True

# Проверка на простоту
if number < 2:
    is_prime = False
else:
    for i in range(2, int(number**0.5) + 1):
        if number % i == 0:
            is_prime = False
            break

# Вывод результата
print("Случайное число:", number)
print("Простое ли число?", "Да" if is_prime else "Нет")

#2


# Загадать случайное число от 1 до 10
secret_number = random.randint(1, 10)

# Цикл для угадывания
while True:
    guess = int(input("Попробуйте угадать загаданное число от 1 до 10: "))
    if guess == secret_number:
        print("Молодец! Вы угадали число.")
        break
    elif guess < secret_number:
        print("Слишком маленькое число. Попробуйте снова.")
    else:
        print("Слишком большое число. Попробуйте снова.")

#3

# Перевод температуры от 100 до 0 градусов с шагом 10
for celsius in range(100, -1, -10):
    fahrenheit = celsius * 1.8 + 32
    print(f"{celsius} °C = {fahrenheit:.2f} °F")

#4
while True:
    purchase_sum = float(input("Введите сумму покупки: "))
    if purchase_sum <= 0:
        print("Сумма покупки должна быть больше 0. Повторите ввод.")
        continue
    break

while True:
    paid_sum = float(input("Введите внесенную сумму: "))
    if paid_sum < purchase_sum:
        print(f"Недостающая сумма: {purchase_sum - paid_sum:.2f}. Повторите ввод.")
        continue
    break

# Вычисляем сдачу
change = paid_sum - purchase_sum
if change == 0:
    print("Спасибо!")
else:
    print(f"Возьмите сдачу: {change:.2f}")

#5
# Ввод данных
N = int(input("Введите количество значений N: "))
a = float(input("Введите значение a: "))
b = float(input("Введите значение b: "))
x1 = float(input("Введите x1: "))
x2 = float(input("Введите x2: "))

# Проверка врата
if x1 > x2:
    step = (x1 - x2) / (N - 1)
else:
    step = (x2 - x1) / (N - 1)

# Вычисление и вывод значений
if x1 < x2:
    for i in range(N):
        x = x1 + i * step
        print(f"x = {x:.2f}, y(x) = {a * x + b:.3f}")
else:
    for i in range(N):
        x = x1 - i * step
        print(f"x = {x:.2f}, y(x) = {a * x + b:.3f}")
